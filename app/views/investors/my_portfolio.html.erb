<div class="container">
  <%= form_tag(search_stock_path,method: :get) do |f| %>
    <%= label_tag("Search for Stocks")%>
    <div class = "form-group row">
      <div class="col-9">
        <%= text_field_tag(:stock, "Clear and Enter Symbol", autofocus: true, class: 'form-control') %>
      </div>
      <div class="col-3">
        <%= submit_tag("Search", class: 'btn btn-success')%>
      </div>

    </div>

  <% end %>
  <div id="results">
    <%= render 'investors/search_results'%>
  </div>
  <%= render 'investors/my_stocks'%>
</div>    