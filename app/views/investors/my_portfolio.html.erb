<div class="container">
  <%= form_tag(search_stock_path,method: :get) do |f| %>
    <%= label_tag("Search for Stocks")%>
    <div class = "form-group row">
      <div class="col-9">
        <%= text_field_tag(:stock, "Clear and Enter Symbol", autofocus: true, class: 'form-control') %>
      </div>
      <div class="col-3">
        <%= submit_tag("Search", class: 'btn btn-success')%>
      </div>

    </div>

  <% end %>
  <% if @details_of_stock %>
    <div class = "card card-header alert-success col-9">
      <strong>Symbol: <%= @details_of_stock.ticker %> </strong>
      <strong>Symbol: <%= @details_of_stock.name %> </strong>
      <strong>Symbol: <%= @details_of_stock.last_price %> </strong>
    </div>
  <% end %>
</div>    